@{
    ViewBag.Title = "Home Page";
}
<h1>List of Feature in this Project</h1>
<ul>
    <li>
        <h3>Login</h3>
        @if (!User.Identity.IsAuthenticated)
        {
            <p>
                You have not login yet. Please login now to continue.
            </p>
            @Html.ActionLink("Login", "Login", "Account")
        }
        else { 
            <p>You logged in now. Your Username: &#64;@User.Identity.Name</p>
            <p>Show @Html.ActionLink("Detail","Detail","Users")</p>
        }
        
    </li>
    <li>
        <h3>Show Table of Roles in DB: @Html.ActionLink("Show", "Index", "Role")</h3>
        <h3>Show Table of Account and its Role: @Html.ActionLink("Show","Index","Users")</h3>
        <h3>Show Table of UserInfo: @Html.ActionLink("Show","Index","UserInfo")</h3>
    </li>
    <li>
        
    </li>
</ul>